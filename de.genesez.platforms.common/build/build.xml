<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.common" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/de.genesez.build" type="dir" property="de.genesez.build.available" />
	<fail unless="de.genesez.build.available" message="Please make sure that ${build.basedir}/de.genesez.build is available" />

	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="de.genesez.platforms.common.classpath">
		<fileset dir="${lib.dir}">
			<include name="dom4j*.jar" />
			<include name="**/*.jar" />
		</fileset>
		<pathelement path="${build.basedir}/de.genesez.metamodel/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath"/>
	</path>
	
	<!-- ant task definitions -->
	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask"
		description="xml schema to java compiler task">
    	<classpath refid="de.genesez.platforms.common.classpath" />
  	</taskdef>

	<!-- Public target section -->

	<target name="build"
		description="Build de.genesez.platforms.common"
		depends="typemapping.schema2java, platforms.common.compile">
	</target>

	<target name="createjar"
		description="Create the plugin jar for de.genesez.platforms.common"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${lib.dir}" includes="**/*" />
		</jar>
	</target>
	
	<target name="clean"
		description="Clean de.genesez.platforms.common">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

	<!-- Private target section -->

	<target name="platforms.common.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.gen.dir}" destdir="${bin.dir}">
			<classpath refid="de.genesez.platforms.common.classpath" />
		</javac>
		<javac srcdir="${src.dir}" destdir="${bin.dir}"
			classpathref="de.genesez.platforms.common.classpath"
			debug="on" />
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar"
			compress="true">
			<fileset dir="${bin.dir}" includes="**/*" />
			<fileset dir="${common.dir}" includes="**/*" />
		</jar>
	</target>
	
	<target name="typemapping.schema2java"
		description="generates the java type mapping types from xml schema">
		<echo message="Compiling the schema..." />
		<xjc destdir="${src.gen.dir}"
				binding="${common.dir}/de/genesez/platforms/common/typemapping/typemapping.xjb"
				removeOldOutput="yes" extension="true"
				package="de.genesez.platforms.common.typemapping.types">
			<produces dir="${src.gen.dir}/de/genesez/platforms/common/typemapping/types" includes="**/*" />
			<schema dir="${common.dir}/de/genesez/platforms/common/typemapping/">
				<include name="typemapping.xsd" />
			</schema>
			<arg value="-mark-generated" />
			<arg value="-verbose" />
		</xjc>
	</target>
</project>
