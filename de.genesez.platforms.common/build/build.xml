<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.common" basedir=".." default="build">

	<import file="${build.basedir}/build/imports.xml" />
		
	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	<!-- Set the classpath -->
	<path id="de.genesez.platforms.common.classpath">
		<fileset dir="${lib.dir}">
			<include name="dom4j*.jar" />
		</fileset>
		<path refid="Plug-in Dependencies.libraryclasspath"/>
	</path>

	<!-- Public target section -->
	
	<target name="build"
		description="">
		<echo>${basedir}</echo>
	</target>

	<target name="pluginjar"
		description="Create the plugin jar for de.genesez.platforms.common">
		
	</target>
	
	<target name="clean"
		description="">
	</target>
	
	<!-- Private target section -->
	
	<target name="platforms.common.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.common.classpath"
			debug="on" />
	</target>

</project>
