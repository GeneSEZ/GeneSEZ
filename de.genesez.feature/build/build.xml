<?xml version="1.0" ?>

<project name="de.genesez.feature" basedir="..">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
		
	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Task definition section -->

	<!-- Public target section -->
	
	<target name="featurejar">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true">
			<fileset dir="${basedir}">
				<include name="feature.xml"/>
				<include name="GPL-2.0.txt"/>
			</fileset>
		</jar>
	</target>
	
	<target name="clean">
		<delete includeemptydirs="true" failonerror="false">
			<!-- remove all binary files -->
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
	
</project>
