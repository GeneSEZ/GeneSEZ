<?xml version="1.0"?>
<project name="de.genesez.build.environment" basedir=".." default="">

	<!-- environment specific directories -->
	<property file="${project.build.dir}/environment.properties" />
	
	<!-- build specific directories -->
	<property environment="env"/>
	<property file="${project.build.dir}/build.properties" />
	
	<!-- set the timestamps -->
	<tstamp>
		<format property="release.time" pattern="yyyyMMddhhmm"/>
	</tstamp>
	
	<property name="project.name" value="${ant.project.name}"/>
	<propertycopy name="plugin.version" from="${release}.${release.time}"/>
	<property name="plugin.name" value="${project.name}_${plugin.version}"/>
	<property name="plugin.jar" value="${plugin.name}.jar"/>
	
</project>
