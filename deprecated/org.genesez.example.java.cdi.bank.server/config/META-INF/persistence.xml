<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="BankUnit" transaction-type="JTA">
		<!-- using hibernate as JPA provider -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/BankTutorialWeldDS</jta-data-source>
		<properties>
			<!-- let hibernate find automatically all entity classes -->
			<property name="hibernate.archive.autodetection" value="class" />
			
			<!-- Setzen dieser Property aktiviert das automatische Tabellen-Generieren und LÃ¶schen beim Deploy -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			
        	<!-- configure hibernate datasource -->
	        <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
	        <property name="hibernate.connection.url" value="jdbc:hsqldb:BankTutorialWeldDB" />
	        <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
	        <property name="hibernate.connection.username" value="sa" />
	        <property name="hibernate.connection.password" value="" />
			<!-- property name="hibernate.connection.provider_class" value="org.hibernate.connection.DriverManagerConnectionProvider" /-->
			
		    <!-- property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.JBossTransactionManagerLookup"/-->
			
			<!-- print executed sql to command line - only debug purpose -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
