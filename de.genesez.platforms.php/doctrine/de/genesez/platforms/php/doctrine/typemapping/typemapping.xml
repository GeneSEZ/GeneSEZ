<?xml version="1.0" encoding="UTF-8" ?>

<!--
	basic type mapping for the framework 'phpdoctrine'
	
	@author	tobias haubold
	@date	2008-04-17
-->

<typeMapping>
	<header>
		<superMappingFile>de/genesez/platforms/php/typemapping/typemapping.xml</superMappingFile>
	</header>
	
	<collectionTypes>
	</collectionTypes>
	
	<!--
		primitive types, defined within the UML metamodel
	-->
	<primitiveTypes>
		<mappingElement>
			<map>Boolean</map>
			<defaultType>boolean</defaultType>
		</mappingElement>
		<mappingElement>
			<map>String</map>
			<defaultType>string</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Integer</map>
			<defaultType>integer</defaultType>
		</mappingElement>
		<mappingElement>
			<map>UnlimitedNatural</map>
			<defaultType>integer</defaultType>
		</mappingElement>
	</primitiveTypes>
	
	<!--
		further types need to be modeled as external types
	-->
	<externalTypes>
		<mappingElement>
			<map>Float</map>
			<defaultType>float</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Array</map>
			<defaultType>array</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Object</map>
			<defaultType>object</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Blob</map>
			<defaultType>blob</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Clob</map>
			<defaultType>clob</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Timestamp</map>
			<defaultType>timestamp</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Time</map>
			<defaultType>time</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Date</map>
			<defaultType>date</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Enum</map>
			<defaultType>enum</defaultType>
		</mappingElement>
		<mappingElement>
			<map>Gzip</map>
			<defaultType>gzip</defaultType>
		</mappingElement>
	</externalTypes>
	
</typeMapping>
