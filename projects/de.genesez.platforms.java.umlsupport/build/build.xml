<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="de.genesez.platforms.java.umlsupport" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/de.genesez.build" type="dir" property="de.genesez.build.available" />
	<fail unless="de.genesez.build.available" message="Please make sure that ${build.basedir}/de.genesez.build is available" />

	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	
	<!-- public targets -->
	<target name="build" depends="compile" description="Build de.genesez.platforms.java.umlsupport" />
	
	<target name="createjar" depends="build"
			description="create jar file for de.genesez.platforms.java.umlsupport">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar" compress="true">
			<fileset dir="${bin.dir}">
				<include name="de/genesez/platforms/java/umlsupport/**/*" />
			</fileset>
		</jar>
	</target>
	
	<target name="clean" description="Clean de.genesez.platforms.java.umlsupport">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
	
	<!-- private targets -->
	<target name="compile" depends="clean">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="Plug-in Dependencies.libraryclasspath"
			target="${target}"
			source="${source}"
			debug="on" />
	</target>
	
</project>