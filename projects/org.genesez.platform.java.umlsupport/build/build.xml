<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<project name="org.genesez.platform.java.umlsupport" basedir=".." default="build">

	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	
	<target name="build" description="Build org.genesez.platform.java.umlsupport">
		<mkdir dir="${bin.dir}" />
		<javac destdir="${bin.dir}" debug="on">
			<src path="${src.dir}" />
		</javac>
	</target>
	
	<target name="createjar" depends="build"
			description="create jar file for org.genesez.platform.java.umlsupport">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${ant.project.name}.jar" compress="true">
			<fileset dir="${bin.dir}">
				<include name="org/genesez/platform/java/umlsupport/**/*" />
			</fileset>
		</jar>
	</target>
	
	<target name="clean" description="Clean org.genesez.platform.java.umlsupport">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
</project>
