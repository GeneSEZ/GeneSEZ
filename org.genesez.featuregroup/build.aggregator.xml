<?xml version="1.0" encoding="UTF-8"?>
<!--
	Aggregates the p2 repositories with GeneSEZ dependencies and publishs the aggregated onto the update site.
	
	@author	toh
-->
<project name="org.genesez.p2aggregator" default="aggregate">
	
	<import file="lib/antcontrib.xml" />
	<import file="lib/xmltask.xml" />
	<property environment="env" />
	
	<property name="b3aggr.file" value="genesez.dependencies.b3aggr" />
	<property name="reponame" value="AggRepo" />
	
	<path id="genesez.releases">
		<dirset followsymlinks="false" dir="../../../builds">
			<include name="*/archive/buckminster.output/org.genesez.featuregroup*/site.p2" />
		</dirset>
	</path>
	
	
	<target name="create.b3aggr.file">
		<!-- add each genesez release repository to the aggregator xml -->
		<for param="release">
			<path refid="genesez.releases" />
			<sequential>
				<var name="uri" value="file://@{release}" />
				<echo message="add uri ${uri}" />
				<xmltask source="${b3aggr.file}" dest="${b3aggr.file}">
					<insert path="/aggregator:Aggregation/validationSets[last()]" position="after">
						<![CDATA[
						  <validationSets label="${uri}">
						    <contributions>
							  <repositories location="${uri}" />
						    </contributions>
						  </validationSets>
						]]>
					</insert>
				</xmltask>
			</sequential>
		</for>
	</target>
	
	<target name="aggregate" depends="create.b3aggr.file">
		<exec executable="/bin/sh" dir="${b3.home.dir}">
			<arg value="b3" />
			<arg value="aggregate" />
			<arg value="-data" />
			<arg value="${env.WORKSPACE}" />
			<arg value="--buildModel" />
			<arg file="${basedir}/${b3aggr.file}" />
			<arg value="--buildRoot" />
			<arg value="${basedir}/${reponame}" />
			<arg value="--stacktrace" />
		</exec>
	</target>
</project>
