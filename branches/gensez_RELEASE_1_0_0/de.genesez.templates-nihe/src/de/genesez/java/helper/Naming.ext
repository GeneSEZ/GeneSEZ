import genesezMM;

////////////////////////////////////////////////////////////////////////////////
// public extend functions
////////////////////////////////////////////////////////////////////////////////


// generate a classifier name (class, interface, enumneration)
String asClassifierName(String s) :
	s.toFirstUpper();
	

// generate variable name
String asVariableName(String s) :
	s.toFirstLower();


// generate constant name
String asConstantName(String s) :
	s.toUpperCase();


// generate operation name
String asOperationName(String s) :
	s.toFirstLower();


// generate parameter name
String asParameterName(String s) : 
	s.toFirstLower();


// generate getter name for an attribute or an assocation
String asGetter(String s) :
	"get" + s.toFirstUpper();


// generate setter name for an attribute or an assocation
String asSetter(String s) :
	"set" + s.toFirstUpper();


// generate iterator name for an attribute or an assocation
String asIterator(String s) :
	asGetter(s) + "Iterator";


// generate insert in name for an attribute or an assocation
String asInsertIn(String s) :
	"insertIn" + s.toFirstUpper();


// generate remove from name for an attribute or an assocation
String asRemoveFrom(String s) :
	"removeFrom" + s.toFirstUpper();


// checks if an attribute is a constant or a variable
String asAttributeName(MAttribute a) :
	(a.static && a.final) ? asConstantName(a.name) : asVariableName(a.name);


