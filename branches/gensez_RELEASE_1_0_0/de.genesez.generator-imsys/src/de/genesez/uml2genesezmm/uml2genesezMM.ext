// create a new MEnumeration frum uml2 enumeration
create MEnumeration makeClassifier(Enumeration c):
	// set the unique xmiId and name
	setXmiGuid(xmiId(c))->
	setName(c.name)->
	setVisibility(c.visibility.toString())->
