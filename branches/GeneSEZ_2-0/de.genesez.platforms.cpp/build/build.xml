<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.cpp" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
	
	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	<!-- Set the classpath -->
	<path id="de.genesez.platforms.cpp.classpath">
		<pathelement location="${build.basedir}/de.genesez.metamodel.core/bin" />
		<pathelement location="${build.basedir}/de.genesez.platforms.common/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->
	
	<target name="build"
		description="Build de.genesez.platforms.cpp"
		depends="compile">
	</target>

	<target name="createjar"
		description="Create the plugin jar for de.genesez.platforms.cpp" depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar" compress="true">
			<fileset dir="${bin.dir}" includes="**/*" />
		</jar>
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
			manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${basedir}">
				<include name="cpp/**" />
			</fileset>
		</jar>
		<delete file="${dist.dir}/${project.name}.jar" />
	</target>
	
	<target name="clean"
		description="Clean de.genesez.platforms.cpp">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
	
	<!-- Private target section -->

	<target name="compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.cpp.classpath"
			target="${target}"
			source="${source}"
			debug="on" />
	</target>
</project>
