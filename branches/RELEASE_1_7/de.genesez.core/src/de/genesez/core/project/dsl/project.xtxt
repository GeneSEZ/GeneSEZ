Project:
	generator=Generator
	target=Target;

Generator:
	'generator' '{'
		(entries+=Entry)*
	'}';

Target:
	'target' '{'
		(entries+=Entry)*
	'}';

Entry:
	Manifest|Directory|File;

Manifest:
	'manifest' '{'
		'require:' bundle=JavaIdentifier
	'}';

Directory:
	'directory' name=DirectoryName;

File:
	'file' name=STRING '{'
		content=STRING
	'}';

/**
 * Java identifiers
 */
String JavaIdentifier:
	ID ("." ID)*;

/**
 * Directory names
 */
String DirectoryName:
	ID (("."|"-") ID)*;