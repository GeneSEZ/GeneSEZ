/**
 * GeneSEZ 2 Testing transformation script.
 * Transforms GeneSEZ Generator models into GeneSEZ Testing models.
 */

// uses GeneSEZ metamodel - the source metamodel
import gcore;

// use logging
extension de::genesez::platforms::common::log::Log;
extension de::genesez::platforms::common::AccessHelper;

/*
- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	public extend function to transform a uml2 model
- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
*/

/**
 * checks if an node is a key event
 * @return	true if node is key event, otherwise false
 */
boolean isKeyEvent(MNode m) :
	m.metaType == MAction && m.hasStereotype("keyEvent");

/**
 * checks if an node is a mouse event
 * @return	true if node is mouse event, otherwise false
 */
boolean isMouseEvent(MNode m) :
	m.metaType == MAction && m.hasStereotype("mouseEvent");

/**
 * checks if an node is a mouse move
 * @return	true if node is mouse move, otherwise false
 */
boolean isMouseMove(MNode m) :
	m.metaType == MAction && m.hasStereotype("mouseMove");

/**
 * checks if an node is an input
 * @return	true if node is input, otherwise false
 */
boolean isInput(MNode m) :
	m.metaType == MAction && m.hasStereotype("input");
