<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.java" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/de.genesez.build" type="dir" property="de.genesez.build.available" />
	<fail unless="de.genesez.build.available" message="Please make sure that ${build.basedir}/de.genesez.build is available" />

	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="de.genesez.platforms.java.classpath">
		<pathelement path="${build.basedir}/de.genesez.platforms.common/${bin.dir}" />
		<pathelement path="${build.basedir}/de.genesez.core/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->

	<target name="build"
		description="Build de.genesez.platforms.java"
		depends="platforms.java.compile" >
	</target>

	<target name="createjar"
		description="Create the plugin jar for de.genesez.platforms.java"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.umlsupport.jar" />
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
			</fileset>
		</jar>
	</target>

	<target name="clean"
		description="Clean de.genesez.platforms.java">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

	<!-- Private target section -->

	<target name="platforms.java.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.java.classpath"
			target="${target}"
			source="${source}"
			debug="on" />
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.umlsupport.jar"
			compress="true">
			<fileset dir="${bin.dir}">
				<include name="de/genesez/platforms/java/umlsupport/**/*" />
			</fileset>
		</jar>
		<jar destfile="${dist.dir}/${project.name}.jar"
			compress="true">
			<fileset dir="${bin.dir}" excludes="de/genesez/platforms/java/umlsupport/**/*"/>
			<fileset dir="${cldc.dir}" />
			<fileset dir="${ejb3.dir}" />
			<fileset dir="${java.dir}" />
			<fileset dir="${java4.dir}" />
			<fileset dir="${java5.dir}" />
			<fileset dir="${jpa.dir}" />
			<fileset dir="${jws.dir}" />
			<fileset dir="${weld1.dir}" />
			<fileset dir="${jdi.dir}" />
			<fileset dir="${seam2.dir}" />
			<fileset dir="${hibernate.dir}" />
		</jar>
	</target>

	<target name="documentation"
			description="creates the api documentation">
		<javadoc destdir="${dist.dir}/api-doc" author="true" version="true" use="true">
			<sourcefiles>
				<fileset dir="${src.dir}">
					<include name="**/*.java" />
				</fileset>
			</sourcefiles>
			<tag name="generated" scope="all" description="Generated:"/>
		</javadoc>
	</target>

</project>
