import genesezMM;

extension de::genesez::io::io;


////////////////////////////////////////////////////////////////////////////////
// public extend functions
////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
// public java functions
////////////////////////////////////////////////////////////////////////////////


// public typeMap function without a context
String typeMap(String map) :
	typeMapping(xmlMappingFile(), map);


// public typeMap function with a context
String typeMap(String map, String context) :
	typeMapping(xmlMappingFile(), map, context);
	
	
////////////////////////////////////////////////////////////////////////////////
// private extend functions
////////////////////////////////////////////////////////////////////////////////

// load global variable from oaw workflow file
String xmlMappingFile(): GLOBALVAR xmlMappingFile;

////////////////////////////////////////////////////////////////////////////////
// private java functions
////////////////////////////////////////////////////////////////////////////////


// return the mapping of a type without a context
private String typeMapping(String xmlFile, String map) :
	JAVA de.genesez.mapping.Mapping.typeMapping(java.lang.String, java.lang.String);


// return the mapping of a type with a context
private String typeMapping(String xmlFile, String map, String context) :
	JAVA de.genesez.mapping.Mapping.typeMapping(java.lang.String, java.lang.String, java.lang.String);
