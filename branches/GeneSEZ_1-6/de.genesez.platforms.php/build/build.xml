<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.php" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/de.genesez.build" type="dir" property="de.genesez.build.available" />
	<fail unless="de.genesez.build.available" message="Please make sure that ${build.basedir}/de.genesez.build is available" />

	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="de.genesez.platforms.php.classpath">
		<pathelement path="${build.basedir}/de.genesez.platforms.common/${bin.dir}" />
		<pathelement path="${build.basedir}/de.genesez.core/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->

	<target name="build"
		description="Build de.genesez.platforms.php"
		depends="platforms.php.compile" >
	</target>

	<target name="createjar"
		description="Create the plugin jar for de.genesez.platforms.php"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${bin.dir}" />
			<fileset dir="${php.dir}" />
			<fileset dir="${php5.dir}" />
			<fileset dir="${php6.dir}" />
			<fileset dir="${pear.dir}" />
			<fileset dir="${doctrine.dir}" />
			<fileset dir="${smarty.dir}" />
			<fileset dir="${basedir}">
				<include name="plugin.xml"/>
			</fileset>
		</jar>
	</target>

	<target name="clean"
		description="Clean de.genesez.platforms.php">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

	<!-- Private target section -->

	<target name="platforms.php.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.php.classpath"
			debug="on" />
	</target>

</project>
