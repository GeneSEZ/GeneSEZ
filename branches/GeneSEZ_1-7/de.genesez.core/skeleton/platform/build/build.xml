<?xml version="1.0" ?>

<project name="%%platform%%" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
		
	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="%%platform%%.classpath">
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>

	<!-- Public target section -->
	
	<target name="build"
		description="Build %%platform%%">
	</target>

	<target name="pluginjar"
		description="Create the plugin jar for %%platform%%"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/de.genesez.metamodel_${release}.jar"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
		</jar>
	</target>
	
	<target name="clean"
		description="Clean %%platform%%">
		<delete includeemptydirs="true">
			<!-- remove all binary files -->
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

	<!-- Private target section -->
	
</project>
