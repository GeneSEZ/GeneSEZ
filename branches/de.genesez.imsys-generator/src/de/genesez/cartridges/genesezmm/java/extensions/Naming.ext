import genesezMM;

////////////////////////////////////////////////////////////////////////////////
// public extend functions
////////////////////////////////////////////////////////////////////////////////


String asClassifierName(String s) :
	s.toFirstUpper();


// 
String asGetter(String s) :
	"get" + s.toFirstUpper();


//
String asSetter(String s) :
	"set" + s.toFirstUpper();


//
String asAttributeName(MAttribute a) :
	a.final ? _asConstantName(a.name) : _asVariableName(a.name);


String asVariableName(String name) :
	_asVariableName(name);


String asConstantName(String name) :
	_asConstantName(name);

////////////////////////////////////////////////////////////////////////////////
// public java functions
////////////////////////////////////////////////////////////////////////////////

	
////////////////////////////////////////////////////////////////////////////////
// private extend functions
////////////////////////////////////////////////////////////////////////////////


private String _asConstantName(String constantName) :
	constantName.toUpperCase();	


private String _asVariableName(String attributeName) :
	attributeName.toFirstLower();


////////////////////////////////////////////////////////////////////////////////
// private java functions
