<?xml version="1.0"?>
<project name="de.genesez.build.release" basedir=".." default="">

	<property file="${project.build.dir}/release.properties" />
	
	<!-- set the timestamps -->
	<tstamp>
		<format property="release.time" pattern="yyyyMMddhhmm"/>
	</tstamp>
	
	<property name="project.name" value="${ant.project.name}"/>
	<property name="t.plugin.version" value="${release}.${release.time}"/>
	<propertycopy name="plugin.version" from="t.plugin.version"/>
	<property name="plugin.name" value="${project.name}_${plugin.version}"/>
	<property name="plugin.jar" value="${plugin.name}.jar"/>

</project>
