<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.build.common" basedir=".">

	<!-- import environment and required scripts -->
	<import file="imports.xml"/>

	<!-- private targets -->

	<target name="tag.all"
		description="Set the GENESEZ_RELEASE_VERSION in all projects">
		<for param="project">
			<path refid="build.plugins" />
			<sequential>
				<replaceregexp byline="true"
					file="@{project}/META-INF/MANIFEST.MF"
					match="Bundle-Version:.*"
					replace="Bundle-Version: ${plugin.version}">
				</replaceregexp>
			</sequential>
		</for>
		<for param="project">
			<path refid="build.features" />
			<sequential>
				<replaceregexp byline="true"
					file="@{project}/feature.xml"
					match='(?&lt;!xml )version=".*"'
					replace='version="${plugin.version}"'>
				</replaceregexp>
			</sequential>
		</for>
		<replaceregexp byline="true"
			file="${build.basedir}/${prefix}.updatesite/site.xml"
			match='(?&lt;!xml )version=".*"'
			replace='version="${plugin.version}"' />
		<replaceregexp byline="true"
			file="${build.basedir}/${prefix}.updatesite/site.xml"
			match="feature_(\d|\.)*.jar"
			replace="feature_${plugin.version}.jar" />
	</target>

	<target name="build.all"
		description="Runs the build targets for all plugins">
		<for param="project">
			<path refid="build.plugins" />
			<sequential>
				<ant antfile="${build.file}"
					dir="@{project}"
					target="build"
					inheritAll="false">
					<property name="build.basedir" value="${build.basedir}" />
					<property name="build.number" value="${build.number}" />
					<property name="plugin.version" value="${plugin.version}"/>
				</ant>
			</sequential>
		</for>
	</target>

	<target name="createjar.all"
		description="Creates jar files for all plugins and features">
		<for param="project">
			<path refid="build.projects" />
			<sequential>
				<ant antfile="${build.file}"
					dir="@{project}"
					target="createjar"
					inheritAll="false">
					<property name="build.basedir" value="${build.basedir}" />
					<property name="build.number" value="${build.number}" />
					<property name="plugin.version" value="${plugin.version}"/>
				</ant>
			</sequential>
		</for>
	</target>

	<target name="distribute.all"
		description="Distributes plugins and features">
		<for param="project">
			<path refid="build.plugins" />
			<sequential>
				<copy todir="${updatesite.plugins}">
					<fileset dir="@{project}/dist">
						<include name="*_${plugin.version}.jar"/>
					</fileset>
				</copy>
			</sequential>
		</for>
		<for param="project">
			<path refid="build.features" />
			<sequential>
				<copy todir="${updatesite.features}">
					<fileset dir="@{project}/dist">
						<include name="*_${plugin.version}.jar"/>
					</fileset>
				</copy>
			</sequential>
		</for>
	</target>
	
	<target name="bundle.all"
		description="bundles GeneSEZ with oAW + eclipse">
		<mkdir dir="${temp.dir}" />
		<!-- create the new gensez bundle zip -->
		<for param="project">
			<path refid="build.features" />
			<sequential>
				<unjar dest="${temp.dir}/genesez/features/@{project}_${plugin.version}">
					<fileset dir="@{project}/dist">
						<include name="*_${plugin.version}.jar"/>
					</fileset>
				</unjar>
			</sequential>
		</for>
		<for param="project">
			<path refid="build.plugins" />
			<sequential>
				<if>
					<!-- filter plug-ins for unpacking -->
					<contains string="@{project}" substring="platforms.common" />
					<then>
						<unjar dest="${temp.dir}/genesez/plugins/@{project}_${plugin.version}">
							<fileset dir="@{project}/dist">
								<include name="*_${plugin.version}.jar" />
							</fileset>
						</unjar>
					</then>
					<else>
						<copy todir="${temp.dir}/genesez/plugins">
							<fileset dir="@{project}/dist">
								<include name="*_${plugin.version}.jar" />
							</fileset>
						</copy>
					</else>
				</if>
			</sequential>
		</for>
		<zip destfile="${temp.dir}/genesez.zip" basedir="${temp.dir}/genesez" includes="**/*"></zip>
		
		<mkdir dir="${bundle.dir}" />
		<!-- create genesez + oAW + eclipse all-in-one bundles -->
		<!-- zip bundles -->
		<for param="bundle" list="${eclipse.33.zip.dists}">
			<sequential>
				<zip destfile="${bundle.dir}/genesez.@{bundle}">
					<zipfileset src="${eclipse.dist.dir}/@{bundle}" />
					<zipfileset src="${prereq.zip}" prefix="eclipse" />
					<zipfileset src="${temp.dir}/genesez.zip" prefix="eclipse" />
				</zip>
			</sequential>
		</for>
		<for param="bundle" list="${eclipse.34.zip.dists}">
			<sequential>
				<zip destfile="${bundle.dir}/genesez.@{bundle}">
					<zipfileset src="${eclipse.dist.dir}/@{bundle}" />
					<zipfileset src="${prereq.zip}" prefix="eclipse/dropins/prerequisites" />
					<zipfileset src="${temp.dir}/genesez.zip" prefix="eclipse/dropins/genesez" />
				</zip>
			</sequential>
		</for>
		<!-- tar.gz bundles -->
		<for param="bundle" list="${eclipse.33.tar.gz.dists}">
			<sequential>
				<mkdir dir="${unpack.dir}" />
				<untar src="${eclipse.dist.dir}/@{bundle}" dest="${unpack.dir}" compression="gzip" />
				<unzip src="${prereq.zip}" dest="${unpack.dir}/eclipse" />
				<unzip src="${temp.dir}/genesez.zip" dest="${unpack.dir}/eclipse" />
				<tar destfile="${bundle.dir}/genesez.@{bundle}" compression="gzip" longfile="gnu">
					<fileset dir="${unpack.dir}" includes="**/*" />
				</tar>
				<delete dir="${unpack.dir}" />
			</sequential>
		</for>
		<for param="bundle" list="${eclipse.34.tar.gz.dists}">
			<sequential>
				<mkdir dir="${unpack.dir}" />
				<untar src="${eclipse.dist.dir}/@{bundle}" dest="${unpack.dir}" compression="gzip" />
				<unzip src="${prereq.zip}" dest="${unpack.dir}/eclipse/dropins/prerequisites" />
				<unzip src="${temp.dir}/genesez.zip" dest="${unpack.dir}/eclipse/dropins/genesez" />
				<tar destfile="${bundle.dir}/genesez.@{bundle}" compression="gzip" longfile="gnu">
					<fileset dir="${unpack.dir}" includes="**/*" />
				</tar>
				<delete dir="${unpack.dir}" />
			</sequential>
		</for>
		<delete dir="${temp.dir}" />
	</target>
	
	<target name="clean.all"
		description="Cleaning lady">
		<for param="project">
			<path refid="build.projects" />
			<sequential>
				<ant antfile="${build.file}"
					dir="@{project}"
					target="clean"
					inheritAll="false">
					<property name="build.basedir" value="${build.basedir}" />
					<property name="build.number" value="${build.number}" />
				</ant>
			</sequential>
		</for>
	</target>

</project>