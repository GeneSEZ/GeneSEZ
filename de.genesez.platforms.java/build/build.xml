<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.java" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
	
	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="de.genesez.platforms.java.classpath">
		<pathelement path="${build.basedir}/de.genesez.platforms.common/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath"/>
	</path>

	
	<!-- Public target section -->
	
	<target name="build"
		description=""
		depends="platforms.java.compile" >
	</target>

	<target name="pluginjar"
		description="Create the plugin jar for de.genesez.platforms.java"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/de.genesez.platforms.java_${release}.jar"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${basedir}">
				<include name="plugin.properties"/>
			</fileset>
			<fileset dir="${bin.dir}" />
			<fileset dir="${java.dir}" />
			<fileset dir="${java4.dir}" />
			<fileset dir="${java5.dir}" />
			<fileset dir="${hibernate.dir}" />
		</jar>
	</target>
	
	<target name="clean"
		description="">
	</target>
	
	<!-- Private target section -->

	<target name="platforms.java.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.java.classpath"
			debug="on" />
	</target>

</project>
