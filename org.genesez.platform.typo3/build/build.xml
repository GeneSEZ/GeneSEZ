<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platform.typo3" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/de.genesez.build" type="dir" property="de.genesez.build.available" />
	<fail unless="de.genesez.build.available" message="Please make sure that ${build.basedir}/de.genesez.build is available" />

	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build/build.properties" />

	<!-- Set the classpath -->
	<path id="de.genesez.platform.typo3.classpath">
		<pathelement path="${build.basedir}/de.genesez.platforms.common/${bin.dir}" />
		<pathelement path="${build.basedir}/de.genesez.metamodel.core/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->

	<target name="build"
		description="Build de.genesez.platform.typo3">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platform.typo3.classpath"
			target="${target}"
			source="${source}"
			debug="on" />
	</target>

	<target name="createjar"
		description="Create the plugin jar for de.genesez.platform.typo3"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar" compress="true">
			<fileset dir="${bin.dir}" includes="**/*" />
		</jar>
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
			manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${basedir}">
				<include name="${common.dir}/**" />
				<include name="${typo3v4.dir}/**" />
				<include name="${typo3v4-mvc.dir}/**" />
			</fileset>
		</jar>
		<delete file="${dist.dir}/${project.name}.jar" />
	</target>

	<target name="clean"
		description="Clean de.genesez.platform.typo3">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

</project>
