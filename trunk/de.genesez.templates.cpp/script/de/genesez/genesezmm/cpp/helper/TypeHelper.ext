// import genesezMM meta model
import genesezMM;

extension de::genesez::genesezmm::AccessHelper; 

/*
------------------------------------------------------------------------
Public functions
------------------------------------------------------------------------
*/

boolean hasBuildInType(MAttribute a) :
	a.type.isBuildInType();

boolean isBuildInType(MType t) :
	t.name().matches(
		"((unsigned|signed) )?" +
		"(char|short|int|long|double|float)" +
		"\\*?"
	);

boolean hasStandardType(MAttribute a) :
	a.type.isStandardType();
	
/*
TODO: MExternalDatatype verwenden
*/
boolean isStandardType(MType t) :
	t.name().matches(
		"(set|map|vector|string)"
	);
	
