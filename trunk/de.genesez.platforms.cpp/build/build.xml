<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="org.genesez.platform.cpp" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/org.genesez.build/build/imports.xml" />
	
	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	<!-- Set the classpath -->
	<path id="org.genesez.platform.cpp.classpath">
		<pathelement location="${build.basedir}/org.genesez.metamodel.core/bin" />
		<pathelement location="${build.basedir}/org.genesez.platform.common/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->
	
	<target name="build"
		description="Build org.genesez.platform.cpp"
		depends="compile">
	</target>

	<target name="createjar"
		description="Create the plugin jar for org.genesez.platform.cpp" depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar" compress="true">
			<fileset dir="${bin.dir}" includes="**/*" />
		</jar>
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
			manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${basedir}">
				<include name="cpp/**" />
			</fileset>
		</jar>
		<delete file="${dist.dir}/${project.name}.jar" />
	</target>
	
	<target name="clean"
		description="Clean org.genesez.platform.cpp">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
	
	<!-- Private target section -->

	<target name="compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="org.genesez.platform.cpp.classpath"
			target="${target}"
			source="${source}"
			debug="on" />
	</target>
</project>
