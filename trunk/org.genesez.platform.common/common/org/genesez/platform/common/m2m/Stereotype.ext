// based on genesez meta model
import gcore;

// use common access helper scripts
extension org::genesez::platform::common::AccessHelper;


/*
- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	removeStereotype
- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
*/ 

Void removeStereotype(MElement this, MStereotype s) :
	this.taggedValue.tag.removeAll(s.taggedValue.tag) ->
	this.taggedValue.removeAll(s.taggedValue) ->
	this.model().stereotype.remove(s) ->
	this.stereotype.remove(s);

/* Why do we need this script here ??? */	
MStereotype getStereotype(MElement this, String name) :
	this.stereotype.selectFirst(e|e.name == name);