«ENDDEFINE»


«DEFINE TCAColumnsConfigFile FOR MAttribute -»
				'type' => 'group',
				'internal_type' => 'file',
				'uploadfolder' => 'uploads/«fullQualifiedExtensionName().toLowerCase() -»',
				'allowed' => '*',
				'disallowed' => 'php',
