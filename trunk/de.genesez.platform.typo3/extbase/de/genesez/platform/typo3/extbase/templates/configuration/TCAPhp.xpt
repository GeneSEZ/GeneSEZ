«ENDDEFINE»


«DEFINE TCAColumnsConfig FOR MAttribute -»
			'config' => array(
				«IF type.mapName("TYPO3").name() == "String" -»
					«EXPAND TCAColumnsConfigString -»
				«ELSEIF type.mapName("TYPO3").name() == "Text" -»
					«EXPAND TCAColumnsConfigText -»
				«ELSEIF type.mapName("TYPO3").name() == "Integer" -»
					«EXPAND TCAColumnsConfigInteger -»
				«ELSEIF type.mapName("TYPO3").name() == "Floating Point" -»
					«EXPAND TCAColumnsConfigFloatingPoint -»
				«ELSEIF type.mapName("TYPO3").name() == "Boolean" -»
					«EXPAND TCAColumnsConfigBoolean -»
				«ELSEIF type.mapName("TYPO3").name() == "DateTime" -»
					«EXPAND TCAColumnsConfigDateTime -»
				«ELSEIF type.mapName("TYPO3").name() == "Select List" -»
					«EXPAND TCAColumnsConfigSelectList -»
				«ELSEIF type.mapName("TYPO3").name() == "File" -»
					«EXPAND TCAColumnsConfigFile -»
				«ELSEIF type.mapName("TYPO3").name() == "Image" -»
					«EXPAND TCAColumnsConfigImage -»
				«ELSE -»
					«EXPAND TCAColumnsConfigOther( type.mapName("TYPO3").name() ) -»
				«ENDIF -»
			)
«ENDDEFINE»


«DEFINE TCAColumnsConfigString FOR MAttribute -»
				'type' => 'input',
				'size' => 30,
				'eval' => 'trim'
«ENDDEFINE»


«DEFINE TCAColumnsConfigText FOR MAttribute -»
				'type' => 'text',
				'cols' => 40,
				'rows' => 15,
				'eval' => 'trim'
«ENDDEFINE»


«DEFINE TCAColumnsConfigInteger FOR MAttribute -»
				'type' => 'input',
				'size' => 30,
				'eval' => 'int'
«ENDDEFINE»


«DEFINE TCAColumnsConfigFloatingPoint FOR MAttribute -»
				'type' => 'input',
				'size' => 30,
				'eval' => 'double2'
«ENDDEFINE»


«DEFINE TCAColumnsConfigBoolean FOR MAttribute -»
				'type' => 'check',
				'default' => 0
«ENDDEFINE»


«DEFINE TCAColumnsConfigDateTime FOR MAttribute -»
				'type' => 'input',
				'size' => 12,
				'max' => 20,
				'eval' => 'datetime',
				'checkbox' => 1,
				'default' => time()
«ENDDEFINE»


«DEFINE TCAColumnsConfigSelectList FOR MAttribute -»
