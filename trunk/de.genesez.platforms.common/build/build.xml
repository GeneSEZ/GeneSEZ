<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.common" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
	
	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	<!-- Set the classpath -->
	<path id="de.genesez.platforms.common.classpath">
		<fileset dir="${lib.dir}">
			<include name="dom4j*.jar" />
		</fileset>
		<path refid="Plug-in Dependencies.libraryclasspath"/>
	</path>

	<!-- Public target section -->
	
	<target name="build"
		description=""
		depends="platforms.common.compile">
		<echo>${basedir}</echo>
	</target>

	<target name="pluginjar"
		description="Create the plugin jar for de.genesez.platforms.common"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/de.genesez.platforms.common_${release}.jar"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${basedir}">
				<include name="plugin.properties"/>
			</fileset>
			<fileset dir="${common.dir}" includes="**/*" />
			<fileset dir="${bin.dir}" includes="**/*" />
			<fileset dir="${lib.dir}" includes="**/*" />
		</jar>
	</target>
	
	<target name="clean"
		description="">
	</target>
	
	<!-- Private target section -->
	
	<target name="platforms.common.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.common.classpath"
			debug="on" />
	</target>

</project>
