<?xml version="1.0" encoding="UTF-8" ?>
<project name="org.genesez.platforms.dashboard" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>

	<available file="${build.basedir}/org.genesez.build" type="dir" property="org.genesez.build.available" />
	<fail unless="org.genesez.build.available" message="Please make sure that ${build.basedir}/org.genesez.build is available" />

	<import file="${build.basedir}/org.genesez.build/build/imports.xml" />

	<!-- Import project related properties -->
	<property file="build.properties" />

	<!-- Set the classpath -->
	<path id="org.genesez.platforms.dashboard.classpath">
		<pathelement path="${build.basedir}/org.genesez.metamodel.core/${bin.dir}" />
		<pathelement path="${build.basedir}/org.genesez.metamodel.requirements/${bin.dir}" />
		<pathelement path="${build.basedir}/org.genesez.metamodel.traceability/${bin.dir}" />
		<pathelement path="${build.basedir}/org.genesez.platform.common/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath" />
	</path>
	
	<!-- Public target section -->

	<target name="build" description="Build ${project.name}" depends="compile" >
	</target>

	<target name="createjar" description="Create the plugin jar for ${project.name}" depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/${project.name}.jar" compress="true">
			<fileset dir="${bin.dir}" includes="**/*" />
		</jar>
		<jar destfile="${dist.dir}/${plugin.jar}"
			compress="true"
			manifest="META-INF/MANIFEST.MF">
			<fileset dir="${dist.dir}" includes="${project.name}.jar" />
			<fileset dir="${basedir}">
				<include name="dashboard/**" />
				<include name="template/**" />
			</fileset>
		</jar>
		<delete file="${dist.dir}/${project.name}.jar" />
	</target>

	<target name="clean" description="Clean ${project.name}">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>

	<!-- Private target section -->

	<target name="compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" destdir="${bin.dir}"
			classpathref="org.genesez.platforms.dashboard.classpath"
			target="${target}"
			source="${source}"
			debug="on" />
	</target>

</project>