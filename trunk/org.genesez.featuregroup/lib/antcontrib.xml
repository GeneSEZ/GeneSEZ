<?xml version="1.0"?>
<project name="org.genesez.build.antcontrib">
	
	<!-- path to the ant contrib libraries -->
	<path id="antcontrib.classpath">
		<pathelement location="lib/ant-contrib-1.0b3.jar" />
		<pathelement location="lib/bcel-5.1.jar" />
		<pathelement location="lib/commons-httpclient-3.0.1.jar" />
		<pathelement location="lib/commons-logging-1.0.4.jar" />
		<pathelement location="lib/ivy-1.3.1.jar" />
	</path>
	
	<!-- load the ant contrib tasks -->
	<taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="antcontrib.classpath" />
	<taskdef name="for" classname="net.sf.antcontrib.logic.ForTask" classpathref="antcontrib.classpath" />
	
</project>
