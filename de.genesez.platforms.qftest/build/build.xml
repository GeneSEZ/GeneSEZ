<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project name="de.genesez.platforms.qftest" basedir=".." default="build">

	<condition property="build.basedir"
		value="${basedir}/..">
		<not>
			<isset property="build.basedir" />
		</not>
	</condition>
	
	<import file="${build.basedir}/de.genesez.build/build/imports.xml" />
	
	<!-- Import project related properties -->
	<property file="build/build.properties" />
	
	<!-- Set the classpath -->
	<path id="de.genesez.platforms.qftest.classpath">
		<pathelement path="${build.basedir}/de.genesez.testing/${bin.dir}" />
		<path refid="Plug-in Dependencies.libraryclasspath"/>
	</path>

	<!-- Public target section -->
	
	<target name="build"
		description="Build de.genesez.platforms.qftest"
		depends="platforms.qftest.compile">
	</target>
	
	<target name="pluginjar"
		description="Create the plugin jar for de.genesez.platforms.qftest"
		depends="build">
		<mkdir dir="${dist.dir}" />
		<jar destfile="${dist.dir}/de.genesez.platforms.qftest_${release}.jar"
			compress="true"
		 	manifest="META-INF/MANIFEST.MF">
			<fileset dir="${bin.dir}" includes="**/*" />
			<fileset dir="${qftest.dir}" includes="**/*" />
		</jar>
	</target>
	
	<target name="clean"
		description="Clean de.genesez.platforms.qftest">
		<delete includeemptydirs="true" failonerror="false">
			<fileset dir="${bin.dir}" />
			<fileset dir="${dist.dir}" includes="*.jar" />
		</delete>
	</target>
	
	<!-- Private target section -->
	
	<target name="platforms.qftest.compile">
		<mkdir dir="${bin.dir}" />
		<javac srcdir="${src.dir}" 
			destdir="${bin.dir}"
			classpathref="de.genesez.platforms.qftest.classpath"
			debug="on" />
	</target>

</project>
